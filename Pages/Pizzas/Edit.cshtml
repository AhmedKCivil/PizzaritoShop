@page "{id:int}"
@model PizzaritoShop.Pages.Pizzas.EditModel

<h1>Edit Pizza</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label for="PizzaName">Pizza Name</label>
        <input asp-for="PizzaDetail.PizzaName" class="form-control" />
        <span asp-validation-for="PizzaDetail.PizzaName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="PizzaDetail.Price" class="form-control" />
        <span asp-validation-for="PizzaDetail.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ImageTitle">Image URL</label>
        <input asp-for="PizzaDetail.ImageTitle" class="form-control" />
        <span asp-validation-for="PizzaDetail.ImageTitle" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
